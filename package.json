{
  "name": "ldesign-form-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "LDesign 表单插件系统 - 框架无关的表单管理库，提供完整的表单状态管理、验证、数据绑定等功能，并内置 Vue 3 适配器",
  "keywords": [
    "ldesign",
    "form",
    "dynamic-form",
    "vue",
    "vue3",
    "typescript",
    "validation",
    "layout",
    "responsive",
    "form-builder",
    "form-engine",
    "framework-agnostic",
    "composition-api",
    "reactive"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "homepage": "https://github.com/ldesign/form#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/form.git",
    "directory": "packages/form"
  },
  "bugs": {
    "url": "https://github.com/ldesign/form/issues"
  },
  "main": "dist/index.umd.js",
  "module": "dist/index.umd.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/index.umd.js",
      "require": "./dist/index.umd.js"
    }
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "dist"
  ],
  "scripts": {
    "dev": "pnpm --filter form-playground dev",
    "dev:playground": "pnpm --filter form-playground dev",
    "build:core": "pnpm --filter @ldesign/form-core build",
    "build:vue": "pnpm --filter @ldesign/form-vue build",
    "build": "pnpm build:core && pnpm build:vue",
    "build:lib": "vite build",
    "build:types": "vue-tsc --declaration --emitDeclarationOnly",
    "build:watch": "vite build --watch",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts,.vue --fix",
    "lint:check": "eslint src --ext .ts,.vue",
    "type-check": "vue-tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,vue,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,vue,js,json,md}\"",
    "clean": "rimraf dist",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "example:dev": "vite dev/",
    "example:build": "vite build dev/",
    "legacy:test": "vitest run __tests__/legacy",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "lint:fix": "eslint . --ext .ts,.tsx,.vue,.js,.jsx --fix"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "dependencies": {
    "lit": "^3.0.0",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^8.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "jsdom": "^22.0.0",
    "less": "^4.2.0",
    "playwright": "^1.40.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0",
    "vitepress": "^1.0.0",
    "vitest": "^1.0.0",
    "vue": "^3.3.0",
    "vue-tsc": "^1.8.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": [
    "*.css",
    "*.less",
    "*.scss",
    "*.vue"
  ]
}
